{
  "name": "remote-pc-shutdown-service",
  "version": "1.0.0",
  "description": "Desktop service that listens for shutdown requests from mobile app via WiFi or Bluetooth and shuts down Windows PC",
  "main": "dist/server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "serve": "node dist/server.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "bluetooth-serial-port": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-shutdown-windows": "^1.0.0",
    "node-windows": "^1.0.0-beta.8",
    "pkg": "^5.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
